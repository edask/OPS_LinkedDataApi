@base <http://www.openphacts.org/api> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix dc: <http://purl.org/dc/elements/1.1/> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix dcterms: <http://purl.org/dc/terms/>.
@prefix api: <http://purl.org/linked-data/api/vocab#> .
@prefix rel: <http://vocab.org/relationship/> .
@prefix void: <http://rdfs.org/ns/void#> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix drugbank: <http://www4.wiwiss.fu-berlin.de/drugbank/resource/drugbank/> .
@prefix chemspider: <http://rdf.chemspider.com/#> .
@prefix sio: <http://semanticscience.org/resource/>

<#document> a api:API ;
        rdfs:label "Document"@en ;
        api:sparqlEndpoint <http://ops-virtuoso.scai.fraunhofer.de:8892/sparql/> ;
        api:contentNegotiation api:parameterBased ;
        api:variable <#input> ; 
	api:dataset <http://www.ncbi.nlm.nih.gov/pubmed/> ;
	api:dataset <https://trac.nbic.nl/data-mining/> ;
	api:vocabulary <http://purl.org/dc/terms/> ;
	api:vocabulary <http://www.w3.org/1999/02/22-rdf-syntax-ns#> ;
	api:description "An API configuration to return information about documents" ;
	api:endpoint [ 
		a api:ItemEndpoint ;
		api:name "Document Information" ;
		api:description "Returns information about a single document that corresponds to {uri}.";
		api:uriTemplate "/document?uri={uri}" ;
	        api:itemTemplate "{uri}" ;
		api:exampleRequestPath "/document?uri=http%3A%2F%2Fwww.ncbi.nlm.nih.gov%2Fpubmed%2F11999999";
		api:viewer <#documentViewer> ;
		api:defaultViewer <#documentViewer> . ] .

<http://www.ncbi.nlm.nih.gov/pubmed/> api:label "PubMed" .
<https://trac.nbic.nl/data-mining/> api:label "Peregrine" .

<http://purl.org/dc/terms/> api:label "dc-term" .
<http://www.w3.org/1999/02/22-rdf-syntax-ns#> api:label "rdf" .

<#input> api:name "uri" ;
	api:label "uri";
	api:value "A URLEncoded input URI. It will replace any SPARQL variables named ?ops_item" .

<#documentViewer> a api:Viewer ;
	api:name "documentViewer" ;
	api:template 
"?ops_item rdf:type <http://nlp2rdf.lod2.eu/schema/string/Document> .
?ops_item dc-term:title ?title .
?ops_item dc-term:creator ?author .
?ops_item dc-term:date ?date .
?ops_item dc-term:abstract ?abstract .
?ops_item dc-term:identifier ?pmid .
?ops_item dc-term:publisher ?publisher .";
	api:where
"GRAPH <http://documents_medline12.xml> {
	?ops_item dc-term:title ?title .
	?ops_item dc-term:creator ?author .
	?ops_item dc-term:date ?date .
	?ops_item dc-term:abstract ?abstract .
	?ops_item dc-term:identifier ?pmid .
	?ops_item dc-term:publisher ?publisher .
}" .
